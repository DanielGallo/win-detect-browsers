#!/usr/bin/env node

var argv = require('yargs')
  .boolean('lucky').alias('l', 'lucky')
  .boolean('verbose')
  .boolean('version').alias('v', 'version')
  .default({ lucky : false, version : true, verbose: false })
  .argv;

var detect = require('../')
  , start  = Date.now()

detect(argv._, argv, function(browsers){
  var duration = Date.now()-start
  console.log('Found %d browsers in %dms', browsers.length, duration)

  var format = "\n%s %s\n  @ %s"
  browsers.forEach(function(b){
    if (argv.verbose) console.log(b)
    else console.log(format, b.name, b.version || '', b.path)
  })
})
